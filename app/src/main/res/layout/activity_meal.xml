<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MealActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/app_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/prozalibre"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:layout_marginStart="6dp"
                    android:text="Hello"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/divider_1"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_width="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_1"
            android:layout_marginTop="30dp"
            android:id="@+id/image"
            android:background="@drawable/image_background"
            android:layout_height="350dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/ll1"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/type"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:textColor="#00308F"
                android:text="Hello"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@id/type"
                app:layout_constraintTop_toTopOf="@id/type"
                app:layout_constraintBottom_toBottomOf="@id/type"
                android:layout_marginStart="10dp"
                android:background="@drawable/type_background"
                android:text="Canadian"
                android:id="@+id/origin"
                android:textColor="#800000"
                android:padding="10dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="35dp"
                android:id="@+id/you_tube"
                android:src="@drawable/ic_youtube"
                android:layout_marginStart="10dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/like_button"
            android:layout_marginEnd="20dp"
            android:src="@drawable/heart"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/ll1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll1"
            app:layout_constraintBottom_toBottomOf="@id/ll1"
            android:layout_height="25dp"
            app:tint="@color/black" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:id="@+id/divider_2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll1"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="Ingredients"
            android:id="@+id/ingredients_title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/prozalibre"
            android:layout_height="wrap_content"/>
        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredients_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ingredients"
            app:flRowSpacing="5dp"
            app:flChildSpacing="5dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/divider_3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ingredients"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/amount_title"
            app:layout_constraintTop_toBottomOf="@id/divider_3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/prozalibre"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Instructions"
            android:id="@+id/instruction_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_3"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/prozalibre"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/instructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instruction_title"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>